#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "tsc" ]; then
	typescript="tsc"
fi

typescript="$basedir/node_modules/typescript/bin/tsc"

params[0]="$typescript"
params[1]="--sourcemap"
params[2]="--module"
params[3]="commonjs"
params[4]="bin/www.ts"

if [ -x "$basedir/node" ]; then
  "$basedir/node" "${params[@]}"
  ret=$?
else
  node "${params[@]}"
  ret=$?
fi
exit $ret
